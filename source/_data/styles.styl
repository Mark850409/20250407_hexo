.category-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 每行三個標籤 */
  gap: 10px; /* 減小標籤間的間距 */
  justify-items: center; /* 標籤置中對齊 */
  margin: 20px 0; /* 上下間距 */
}

.category-list a {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6px 12px;
  border-radius: 12px;
  background-color: var(--btn-default-hover-bg); /* 背景顏色 */
  color: #4c4948; /* 文字顏色 */
  text-decoration: none;
  transition: transform 0.2s, box-shadow 0.2s;
  white-space: nowrap; /* 防止換行 */
}

.category-list a:before {
  content: "⭐"; /* 使用星星符號 */
  margin-right: 5px; /* 符號與文字之間的間距 */
}

.category-list a span {
  margin-left: 5px; /* 數字與標籤之間的間距 */
  display: inline; /* 確保數字跟隨標籤，不換行 */
}

.category-list a:hover {
  transform: scale(1.05);
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
}


/* 分类页样式 end */

/* 標籤页样式*/
/* Container for the tags */
.tag-cloud-tags {
  text-align: center;
  counter-reset: tags;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15px;
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px;
}

/* Individual tag styles */
.tag-cloud-tags a {
  border-radius: 12px; /* Rounded corners */
  padding: 6px 12px; /* Adjust padding to fit text */
  font-size: 0.95em;
  color: #ffffff;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  background-color: #8e44ad;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  font-weight: bold;
}

.tag-cloud-tags a:before {
  content: "⭐"; /* Add star icon */
  font-size: 0.9em;
}

.tag-cloud-tags a:nth-child(odd) {
  background-color: #3498db;
}

.tag-cloud-tags a:nth-child(even) {
  background-color: #e67e22;
}

.tag-cloud-tags a:hover {
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
  transform: scale(1.05);
}

/* Responsive design */
@media (max-width: 768px) {
  .tag-cloud-tags {
    gap: 10px;
  }

  .tag-cloud-tags a {
    font-size: 0.9em;
    padding: 5px 10px;
  }
}

@media (max-width: 480px) {
  .tag-cloud-tags a {
    font-size: 0.8em;
    padding: 4px 8px;
  }
}

